{%- set navbar = '/navbars/navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    <div class="wrapper">
        <div id="user_account">
            <div class="container">
                {% include'_partials/_flashbag.html.twig' %}
                <div class="row justify-content-center mb-2">Welcome to your account {{ app.user.email }}</div>
                <hr>
                <table class="table mt-4 mb-5">
                    <thead>
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Is verified</th>
                        <th scope="col">Verified at</th>
                        <th scope="col">Registered at</th>
                        <th scope="col">Posts</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ app.user.userIdentifier }}</td>
                        <td>{{ app.user.roles[0] }}</td>
                        <td>{{ app.user.isVerified }}</td>
                        <td>{{ app.user.accountVerifiedAt|date('d/m/y at H:i') }}</td>
                        <td>{{ app.user.registeredAt|date('d/m/y at H:i') }}</td>
                        <td>{{ app.user.posts|length }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="message-text"></div>
            <div class="container">
                <div class="d-flex flex-row">
                    <div {{ stimulus_controller('modal-form', { formUrl: path('change_account_password') }) }} data-action="hidden.bs.modal->modal-form#modalHidden">
                        <button class="btn btn-outline-primary btn-sm" data-action="modal-form#openModal">Change password</button>
                        {{ include('_modal/_modal.html.twig', { modalTitle: 'Change your password' }) }}
                    </div>
                </div>
                <a href="{{ path('user_data') }}" class="btn btn-info btn-sm mb-2">Create pdf</a>
            </div>
        </div>
    </div>
{% endblock %}
