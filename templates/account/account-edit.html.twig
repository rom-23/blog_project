{%- set navbar = '/navbars/admin_navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    {{ form_start(form) }}
<div class="main-container">
    <div class="row">
        <div class="container-fluid">
            <div class="jumbotron jumbotron mb-3 mt-5">
                <div class="container">
                    <span class="lead"><strong>Edit Your account {{ user.email }}</strong></span>
                </div>
                <div class="container">
                    <span><a href="{{ path('user_account') }}" class="btn btn-outline-primary btn-sm"><< Back</a></span>
                    <span class="float-end">{{- form_widget(form.submit) -}}</span>
                </div>
            </div>
            <hr>
            <div class="d-flex justify-content-between m-5">
                <div class="col-7">
                    <div class="row">
                        <div class="col-7">
                            <img src="{{ asset('/uploads/user-image/'~user.image)| imagine_filter('medium') }}" alt="" class="mt-2 mb-3">
                        </div>
                        <div class="col-5">
                            <p class="card-header text-center mb-3">Edit profile</p>
                            <div class="container">
                                <table class="table table-user">
                                    <tr>
                                        <td>{{- form_widget(form.email) -}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{- form_errors(form.imageFile) -}}{{- form_widget(form.imageFile) -}}</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted" hidden>{{- form_label(form.password) -}}{{- form_widget(form.password) -}}</td>
                                    </tr>
                                    <tr>
                                        <td hidden>{{- form_widget(form.roles) -}}</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted float-end" hidden>{{- form_widget(form.isVerified) -}}</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="container">
                                <p>
                                    {% for role in user.roles %}
                                        | {{ role }} |
                                    {% endfor %}
                                </p>
                                <span>Account verified at : {{ user.accountVerifiedAt|date('d/m/Y') }}</span><br>
                                <span class="product-single-price">Registered at : {{ user.registeredAt|date('d/m/Y') }}</span>
                                <p>Verified : {% if user.isVerified == 1 %}Yes{% else %}No{% endif %}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4 bg-white">
                    <p class="card-header text-center mb-3">{{ user.addresses|length }} Addresses</p>
                    <div class="row text-center justify-content-center mt-2">
                        {% if user.addresses == null or user.addresses|length == 0 %}
                            <div class="container">
                                <p><em>You have registered address.</em></p>
                                <a class="btn btn-outline-info btn-sm mb-2" href="{{ path('account_address_add') }}">Add address</a>
                            </div>
                            {% else %}
                                <div class="container">
                                    <a class="btn btn-outline-info btn-sm mb-2" href="{{ path('account_address') }}">Manage addresses</a>
                                </div>
                        {% endif %}
                        {% for address in user.addresses %}
                            <div class="col-5">
                                <p class="text-primary">{{ address.name }}</p>
                                {{ address.address }}<br>
                                {{ address.city }} - {{ address.country }}<br>
                                {{ address.createdAt|date('d/m/Y') }}<br>
                                <a href="{{ path('account_address_delete', {'id':address.id}) }}" class="btn btn-outline-danger btn-sm p-1 m-3">Delete</a>
                                <a href="{{ path('account_address_edit', {'id':address.id}) }}" class="btn btn-outline-info btn-sm p-1 m-3">Update</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-6">
            <p class="card-header text-center mb-3">{{ user.posts|length }} Posts</p>
            <div class="row justify-content-around">
                {% for post in user.posts %}
                    <div class="col-6">
                        <div class="container bg-white">
                            <p><strong>{{ post.title }}</strong>
                                <span class="text-muted float-end"><small><em>Posted on {{ post.createdAt|date('d/m/Y') }}</em></small></span>
                            </p>
                            <small>{{ post.content|raw }}</small>
                            <a href="{{ path('development_post_delete', { id : post.id }) }}" class="btn btn-outline-danger btn-sm p-1"
                               data-delete
                               data-token="{{ csrf_token('delete' ~ post.id) }}">Delete</a>
                            <a href="#" class="btn btn-sm btn-outline-info p-1">Update</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-6">
            <p class="card-header text-center mb-3">{{ user.notes|length }} Notes</p>
            <div class="row justify-content-around">
                {% for note in user.notes %}
                    <div class="col-6">
                        <div class="container bg-white">
                            <p><strong><em>{{ note.title }}</em></strong>
                                <span class="text-muted float-end"><small><em>Added on {{ note.createdAt|date('d/m/Y') }}</em></small></span>
                            </p>
                            <small><em>{{ note.content }}</em></small><br>
                            <a href="{{ path('development_note_delete', { id : note.id }) }}" class="btn btn-outline-danger btn-sm p-1 mt-3"
                               data-delete
                               data-token="{{ csrf_token('delete' ~ note.id) }}">Delete</a>
                            <a href="#" class="btn btn-sm btn-outline-info p-1 mt-3">Update</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    {% endblock %}
