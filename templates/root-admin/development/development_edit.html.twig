{%- set navbar = '/navbars/admin_navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form._token) }}
    <div class="main-container">
        <div class="row">
            <div class="container form-model mb-5 mt-3">
                <div class="jumbotron jumbotron mb-3">
                    <div class="container">
                        <span class="lead"><strong>Edit Development documentation</strong></span>
                        <p>
                            <small>- Use Tom-select for multi-select fields & CKEditor</small><br>
                            <small>- Use Symfony CollectionType and Custom EntityType for relations</small><br>
                        </p>
                        <h1>{{ dev.title }}</h1>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between p-2 mb-2">
                    <a href="{{ path('root_admin_dev_list') }}" class="btn btn-outline-primary btn-sm"><< Back</a>
                    {{- form_widget(form.submit, {'attr':{'class':'btn btn-warning btn-sm'}}) -}}
                </div>
                {{ include('root-admin/development/form/_form.html.twig', {form: form}) }}
            </div>
        </div>
    </div>
    {{ form_end(form,{ render_rest: false }) }}
{% endblock %}



