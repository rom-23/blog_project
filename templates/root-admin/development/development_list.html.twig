{%- set navbar = '/navbars/admin_navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    <div class="container">
        <div class="jumbotron jumbotron mb-3">
            <div class="container">
                <span class="lead"><strong>Development Documentation list</strong></span>
            </div>
        </div>
        <table class="table table-striped table-hover table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Files</th>
                <th>Section</th>
                <th>Tags</th>
                <th>Notes</th>
                <th>Posts</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for dev in developments %}
                <tr>
                    <td>{{ dev.id }}</td>
                    <td>{{ dev.title }}</td>
                    <td>{{ 'slug' }}</td>
                    <td>{{ dev.files|length }}</td>
                    <td>{{ dev.section }}</td>
                    <td>{{ dev.tags.count }}</td>
                    <td>{{ dev.notes.count }}</td>
                    <td>{{ dev.posts.count }}</td>
                    <td>{{ dev.createdAt|date('d/m/y') }}</td>
                    <td>{{ dev.updatedAt|date('d/m/y') }}</td>
                    <td>
                        <a href="{{ path('root_admin_dev_edit', {id: dev.id}) }}" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            <ul>
                {% if page > 1 %}
                <li>
                    <a href="{{ path('root_admin_dev_list', { page : 1 }) }}">First</a>
                </li>
                {% endif %}
                {% if page > 1 %}
                    <li>
                        <a href="{{ path('root_admin_dev_list', { page : page - 1 }) }}">< Previous</a>
                    </li>
                {% endif %}
                {% for p in range %}
                    <li><a href="{{ path('root_admin_dev_list', { page : p }) }}">{{ p }}</a></li>
                {% endfor %}
                {% if page < pages %}
                    <li>
                        <a href="{{ path('root_admin_dev_list', { page : page + 1 }) }}">Next ></a>
                    </li>
                {% endif %}
                {% if page < pages %}
                    <li>
                        <a href="{{ path('root_admin_dev_list', { page : pages }) }}">Last ></a>
                    </li>
                {% endif %}
            </ul>
            </tbody>
        </table>
    </div>
{% endblock %}

