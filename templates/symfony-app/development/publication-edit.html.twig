{%- set navbar = '/navbars/navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    <div class="d-flex text-center">
        <div class="container mt-3">
            <a href="{{ path('development_publication') }}" class="btn btn-outline-primary btn-sm mt-3"><< Back</a>
        </div>
    </div>
    {% include'_partials/_flashbag.html.twig' %}
    <div class="jumbotron jumbotron mt-3">
        <div class="container text-center">
            <div class="alert alert-primary p-2" role="alert">
                Update your Post
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="container-fluid dev-by-section">
            <div class="dev-view">
                <div class="row">
                    <div class="card-header text-center">
                        <p class="card-header mt-4 text-center mb-3">Update Post</p>
                        {{ form_start(postEditForm) }}
                        {{ form_widget(postEditForm.title,{'attr':{'class':'mb-2','id':'edit-post'}}) }}
                        {{ form_widget(postEditForm.content) }}
                        {{ form_end(postEditForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
