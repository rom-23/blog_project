{%- set navbar = '/navbars/navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    <div class="container">
        <div class="d-flex text-center">
            <div class="container mt-1">
                <span>Symfony Single Page Application</span><br>
                <span><small><em>Use Fetch API, Json response from ApiPlatform</em></small></span><br>
                <span><small><em>Use Vanillas JS pagination & search bar</em></small></span><br>
                <a href="{{ path('symfony_dev_app') }}" class="btn btn-outline-primary btn-sm mb-2 mt-3"><< Back</a>
            </div>
        </div>
        <div class="jumbotron jumbotron mb-1">
            <div class="container">
                <div class="alert alert-secondary text-center p-3">
                    All developments subjects
                </div>
            </div>
        </div>
        <div class="container mb-3 mt-4">
            <div class="row justify-content-center">
                <input class="w-25 d-inline-block form-control form-control-sm" type="text" id="search_bar" placeholder="Search ..."/>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="paginationTable">
                        <table class="tableList table" id="listingTable" data-development="{{ developments|json_encode|e('html_attr') }}"></table>
                        <div class="pagination-block">
                            <span class="pageButton outline-none" id="button_prev">Prev</span>
                            <span id="page_number" class="outline-none"></span>
                            <span class="pageButton outline-none" id="button_next">Next</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12">
                    <div id="display-view"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('pagination') }}
{% endblock %}



