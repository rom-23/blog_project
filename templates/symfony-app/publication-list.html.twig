{%- set navbar = '/navbars/navbar.html.twig' -%}
{% extends navbar %}
{% block body %}
    <div class="container">
        <div class="d-flex text-center">
            <div class="container mt-1">
                <a href="{{ path('symfony_app') }}" class="btn btn-outline-primary btn-sm mb-2 mt-3"><< Back</a>
            </div>
        </div>
        <div class="jumbotron jumbotron mb-1">
            <div class="container">
                <div class="alert alert-primary text-center p-2" role="alert">
                    All developments posts
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Section</th>
                            <th>Posts</th>
                            <th>Created At</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for dev in developments %}
                            <tr>
                                <td><a href="{{ path('development_publication_view',{'id':dev.id}) }}">{{ dev.title }}</a></td>
                                <td>{{ dev.section.title }}</td>
                                <td>{% if dev.posts|length > 0 %}{{ dev.posts|length }}{% endif %}</td>
                                <td>{{ dev.createdAt|date('d/m/y') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

