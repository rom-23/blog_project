{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <div class="container mt-3">
        <h2>Forgotten password Step 2</h2>
        {{ form_start(forgotPasswordFormStep2) }}
        <div class="row mt-5">
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep2.password.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep2.password.second) }}
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-primary mx-auto" title="Type your email 2 times">Update your password</button>
            <br>
            <small>This link will be invalid at {{ passwordMustBeModifiedBefore }}</small>
        </div>
        {{ form_end(forgotPasswordFormStep2) }}
    </div>
{% endblock %}


