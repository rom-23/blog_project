{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <div class="wrapper">
        <div id="formContent">
            <div class="container mt-1">
                <span>Change your password </span><br>
                <small>Step 2</small>
            </div>
            <div class="container">
                {{ form_start(forgotPasswordFormStep2) }}
                <div class="col mt-1">
                    <div class="col">
                        {{ form_row(forgotPasswordFormStep2.password.first) }}
                    </div>
                    <div class="col">
                        {{ form_row(forgotPasswordFormStep2.password.second) }}
                    </div>
                </div>
                <div class="mt-2">
                    <button type="submit" id="_change-password-button" title="Type your email 2 times">Update your password</button>
                    <small><em>This link will be invalid at {{ passwordMustBeModifiedBefore }}</em></small>
                </div>
                {{ form_end(forgotPasswordFormStep2) }}
            </div>
        </div>
    </div>
{% endblock %}


