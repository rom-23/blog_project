<div class="modal fade" tabindex="-1" aria-hidden="true" data-modal-form-target="modal">
    <div class="modal-dialog">
        <div class="modal-content text-center">
            <div class="modal-header">
                <p class="modal-title p-2 text-muted"><strong><em>{{ modalTitle }}</em></strong></p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" data-modal-form-target="modalBody" data-action="submit->modal-form#submitForm">
                {{ modalContent|default('Loading...') }}
            </div>
            <div class="modal-footer">
                <button type="button" id="modal_cancel" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="modal_save" class="btn btn-info btn-sm" data-action="modal-form#submitForm">Save</button>
            </div>
        </div>
    </div>
</div>
