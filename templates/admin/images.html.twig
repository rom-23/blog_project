<div class="form-widget">
    {% for image in field.value %}
        <a href="#" class="ea-lightbox-thumbnail img-fluid" data-featherlight="{{ image.id }}" data-featherlight-close-on-click="anywhere">
            <img src="/uploads/images/modelsAttachments/{{ image.path }}" class="img-fluid">
        </a>
        <div id="ea-lightbox-{{ image.id }}" class="ea-lightbox">
            <img src="/uploads/images/modelsAttachments/{{ image.path }}" class="img-fluid">
        </div>
    {% endfor %}
</div>
